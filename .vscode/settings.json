{
	/* ———————————————————————————— Editor ——————————————————————————— */
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.detectIndentation": true,
	"editor.stickyScroll.enabled": true,
	"editor.renderWhitespace": "boundary",
	"diffEditor.ignoreTrimWhitespace": false,
	"editor.formatOnSave": false,
	"files.autoSave": "off",
	"files.eol": "\r\n",
	/* —————————————————————————— Formatting ————————————————————————— */
	"eslint.validate": ["typescript", "svelte"],
	"prettier.documentSelectors": ["**/*.svelte"],
	"[json]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.codeActionsOnSave": {
			"source.organizeImports": "always"
		}
	},
	"[typescript]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.codeActionsOnSave": {
			"source.organizeImports": "always"
		}
	},
	"[svelte]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.codeActionsOnSave": {
			"source.organizeImports": "always"
		}
	},
	"[css]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[postcss]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	/* ———————————————————————— Visualization ———————————————————————— */
	"workbench.editor.customLabels.patterns": {
		"**/source/routes/**/+layout.svelte": "/${dirname} - layout",
		"**/source/routes/**/+layout.ts": "/${dirname} - layout script",
		"**/source/routes/**/+layout.server.ts": "/${dirname} - layout server",
		"**/source/routes/**/+layout.reset.svelte": "/${dirname} - layout reset",
		"**/source/routes/**/+page.svelte": "/${dirname}",
		"**/source/routes/**/+page.server.ts": "/${dirname} - server",
		"**/source/routes/**/+page.ts": "/${dirname} - script",
		"**/source/routes/**/+error.svelte": "/${dirname} - error"
	},
	/* —————————————————————————— Tailwind ——————————————————————————— */
